{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file",
			"command": "g++.exe",
			"args": [
				"-g",
				"${workspaceFolder}\\src\\*.cpp",
				"-I",
				"${workspaceFolder}\\head",
				"-o",
				"${workspaceFolder}\\bin\\Rubik-Cube.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: \"g++.exe\""
		}
	]
}